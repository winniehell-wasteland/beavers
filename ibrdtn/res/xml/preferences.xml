<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceScreen android:key="applist" android:title="@string/applist">
	    <intent android:action="android.intent.action.VIEW" android:targetPackage="de.tubs.ibr.dtn" android:targetClass="de.tubs.ibr.dtn.daemon.AppListActivity" />
	</PreferenceScreen>
    <PreferenceCategory android:title="@string/service">
        <CheckBoxPreference android:key="checkActivate" android:title="@string/runasbackgroundservice" android:disableDependentsState="true"/>
        <CheckBoxPreference android:summary="@string/runonboot_desc" android:title="@string/runonboot" android:defaultValue="false" android:key="runonboot"></CheckBoxPreference>    
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/general">    
        <EditTextPreference android:key="endpoint_id" android:title="@string/endpoint_id" android:summary="@string/eid_description" android:dependency="checkActivate"></EditTextPreference>
        <ListPreference android:key="routing" android:title="@string/routing" android:summary="@string/routing_description" android:entries="@array/routing_scheme_names" android:entryValues="@array/routing_scheme_values" android:defaultValue="prophet" android:dependency="checkActivate"></ListPreference>
        <CheckBoxPreference android:key="checkIdleTimeout" android:summary="@string/autodisconnect_desc" android:defaultValue="true" android:title="@string/autodisconnect" android:dependency="checkActivate"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/discovery">
        <CheckBoxPreference android:summary="@string/discovery_announce_desc" android:title="@string/discovery_announce" android:key="discovery_announce" android:defaultValue="true" android:dependency="checkActivate"></CheckBoxPreference>
        <CheckBoxPreference android:key="discovery_multicast" android:summary="@string/discovery_multicast_desc" android:title="@string/discovery_multicast" android:dependency="checkActivate"></CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/interfaces" android:key="interfaces" android:dependency="checkActivate">
    </PreferenceCategory>
    
