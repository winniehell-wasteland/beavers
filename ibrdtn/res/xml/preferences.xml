    <PreferenceCategory android:title="@string/constrains">
        <CheckBoxPreference android:title="@string/pref_constrains_lifetime" android:key="constrains_lifetime" android:dependency="checkActivate" android:summary="@string/pref_constrains_lifetime_summary"/>
        <CheckBoxPreference android:title="@string/pref_constrains_timestamp" android:key="constrains_timestamp" android:dependency="checkActivate" android:summary="@string/pref_constrains_timestamp_summary"/>
    </PreferenceCategory>
    
    <PreferenceCategory android:title="System">
<!--    <CheckBoxPreference android:summary="Enable debugging output" android:title="Debug" android:key="debug" android:dependency="checkActivate"/> -->
        <Preference android:title="@string/system_version" android:key="system_version"/>
	</PreferenceCategory>
</PreferenceScreen>
